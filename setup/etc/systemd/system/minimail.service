[Unit]
Description=Minimail Mailing List Manager
Conflicts=sendmail.service exim.service postfix.service
After=mongod.service redis.service

[Service]
Environment="NODE_ENV=production"
WorkingDirectory=/opt/minimail
ExecStart=node server.js --config="/etc/minimail/minimail.toml"
ExecReload=kill -HUP $MAINPID
Type=simple
Restart=always
SyslogIdentifier=minimail

[Install]
WantedBy=multi-user.target
